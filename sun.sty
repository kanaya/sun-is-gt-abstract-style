\newcommand{\phiscalyear}[1]{\def\atphiscalyear{#1}}
\newcommand{\studentnumber}[1]{\def\atstudentnumber{#1}}
\def\atmaketitle{
    \begin{minipage}{156mm}
    \begin{flushleft}
        \atphiscalyear 年度卒業論文発表会資料
    \end{flushleft}
    {\hrule height 2pt}
    \begin{center}
        {\large\textgt{\@title}}
    \end{center}
    {\hrule height 1pt}
    \begin{center}
        長崎県立大学~情報システム学部~情報システム学科~\atstudentnumber~\@author
    \end{center}
    {\hrule height 2pt}
    \end{minipage}
    \hspace{5mm}
}
\renewcommand{\maketitle}{
    \if@twocolumn
        \ifnum \col@number=\@ne
            \atmaketitle
        \else
            \twocolumn[\atmaketitle]%
        \fi
    \else
        \newpage
        \global\@topnum\z@  % Prevents figures from going at top of page.
        \atmaketitle
    \fi
}
